<div class='blackboard-page'>
  <div class='main-panel'>
    <h3> ADMIN Things </h3>  
      
      <%= form_with model:@enlistment, url: create_enlistment_path do |f| %>

        <div class='mt-1 row'>
          <div class='col-3'>
            <p><h6>  <%= f.label :Student_email%> </h6></p>
            <%= f.select(:student_email, options_for_select(@users)) %>
          </div>
          <div class='col-3'>
            <p><h6><%= f.label :Subject%></h6></p>
            <%= f.select(:subject, options_for_select(@subjects)) %>
          </div>
          <div class='col-3'>
            <p><h6><%= f.label :assessment_type %></h6></p>
            <%= f.submit 'Enlist', class:'btn', style:'background-color: #3d3d3d; color: white'%>
          </div>
        </div>
      <% end %> 

      <%= render 'table', locals: { path: create_enlistment_path, method: :post, button_text: 'Enlist'}  %>

  </div>
</div>

