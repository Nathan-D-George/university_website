<h2 style='padding:15px'>Sign Up</h2>
<div class='d-flex justify-content-center'>
  <div class='col-md-5'>
  <h4 style='padding-top: 15px; padding-bottom:15px'>Your Personal Information</h4>
  <%= form_with model: @user, url: sign_up_path do |f| %>
    <div class='mb-4'>
      <%= f.label :email%>
      <%= f.text_field :email, placeholder:'john@doe.com', class:'form-control' %>
    </div>
    <div class='mb-4'>
      <%= f.label :password%>
      <%= f.password_field :password, placeholder:'*********', class:'form-control' %>
    </div>
    <div class='mb-4'>
      <%= f.label :password_confirmation%>
      <%= f.password_field :password_confirmation, placeholder:'*********', class:'form-control' %>
    </div>
    <div class='mb-4'>
      <p><%= f.label :role %></p>
      <%= f.select(:role, options_for_select(['student','lecturer'])) %>
    </div>
    <div class='mb-4'>
      <p><%= f.label :password_confirmation%></p>
      <p><%= f.label :note_applying_for_residence_does_not_guarantee_a_position%></p>
      <%= f.select(:residence, options_for_select(['none', 'House Novachrono', 'House Silva', 'House Vermillion'])) %>
    </div>
    <div class='mb-4'>
      <%= f.submit 'Register', data:{turbo_confirm: 'Are you sure that these details are correct?', turbo_method: :post}, class:'btn btn-info'%>
    </div>
  <% end %>
  </div>
</div>