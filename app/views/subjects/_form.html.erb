<div class='d-flex justify-content-center'>
  <div class='col-md-5'>
  <h3 style='padding-top: 15px; padding-bottom:15px'>Subject Information</h3>
  <%= form_with model: subject, url: create_subject_path do |f| %>
    <div class='mb-4'>
      <p><h5><%= f.label :Name%></h5></p>
      <%= f.text_field :name, placeholder:'differential equations', class:'form-control', autocomplete: 'off' %>
    </div>
    <div class='mb-4'>
      <p><h4><%= f.label :qualifications_This_Subject_Falls_Under%></h4></p>
      <p><h5><%= f.label :Civil_Engineering%></h5></p>
      <%= f.check_box :CE, {}, true, false %>
      <p><h5><%= f.label :Electronic_Engineering%></h5></p>
      <%= f.check_box :EE, {}, true, false %>
      <p><h5><%= f.label :Mechatronic_Engineering%></h5></p>
      <%= f.check_box :MC, {}, true, false %>
      <p><h5><%= f.label :Mechanical_Engineering%></h5></p>
      <%= f.check_box :MM, {}, true, false %>
    </div>
    <div class='mb-4'>
      <p><%= f.label :credits %></p>
      <%= f.select(:credits, options_for_select([8,12,16,32])) %>
    </div>
    <div class='mb-4'>
      <%= f.submit 'Create Subject', data:{turbo_confirm: 'Are you sure that these details are correct?', turbo_method: :post}, class:'btn btn-dark'%>
    </div>
  <% end %>
  </div>
</div>